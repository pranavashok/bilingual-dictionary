extends layout.pug   

block link
    -var selected = 'Contents';

block content
    div.contents-container
        div.flex-inner-p25
            if same_subcat_words[0]
                h3 #[span.highlight #{same_subcat_words[0].english_subcategory}]
                h4 #[span.highlight #{same_subcat_words[0].konkani_subcategory}]
            else
                h2 Work in progress. Please check again later.
            div
                ol
                    each word in same_subcat_words
                        li
                            if word.konkani_word
                                if word.konkani_word
                                    a(href='/words/'+ word.konkani_word.replace(/ /g, '+')) #{word.konkani_word}
                            else if word.english_word
                                if word.english_word
                                    a(href='/words/'+ word.english_word.replace(/ /g, '+')) #{word.english_word}