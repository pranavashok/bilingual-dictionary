extends layout.pug

block content
    div.flex-container
        div.flex-item
            h3 Meanings of #{query}
            div
                ol
                    each word in words
                        if word.part_of_speech
                            li #{word.translated_word} &nbsp; (#{word.part_of_speech}.)
                        else
                            li= word.translated_word
        div.flex-item
            h3 Related matches for #{query}
            div
                ol
                    each word in related_words
                        li 
                            a(href='/words/'+ word.suggested_word.replace(/ /g, '+')) #{word.suggested_word} 
        div.flex-item
            if same_subcat_words[0]
                h3 Other words in #{same_subcat_words[0].subcategory}
            div
                ol
                    each word in same_subcat_words
                        li
                            if word.word_in_same_cat
                                a(href='/words/'+ word.word_in_same_cat.replace(/ /g, '+')) #{word.word_in_same_cat} 